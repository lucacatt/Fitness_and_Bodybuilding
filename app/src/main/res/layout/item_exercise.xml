<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    app:layout_constraintHorizontal_chainStyle="spread">

    <TextView
        android:id="@+id/tvExerciseName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Exercise Name"
        android:textSize="14sp"
        android:gravity="start"
        android:layout_marginEnd="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvPesoValue"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPesoValue"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Peso"
        android:textSize="14sp"
        android:gravity="center"
        app:layout_constraintEnd_toStartOf="@id/tvSerieValue"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSerieValue"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Serie"
        android:textSize="14sp"
        android:gravity="center"
        app:layout_constraintEnd_toStartOf="@id/tvRepsValue"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvRepsValue"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:text="Reps"
        android:textSize="14sp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
